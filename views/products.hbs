<section class="section-plp">
<nav class="nav-plp">
    <div id="product-list">
        {{#each categories}}
    {{#if order}}
    <ul id="mymenu">
        <li><a aria-label="go to {{this.name}}" href ="products?category={{this.id}}" class="products"> {{this.name}}</a></li>
    </ul>
    {{/if}}
    {{/each}}
</div>
</nav>

<article class="article-plp">
  <div class="dropdown-list">
  <select name="dropdown-select" class="dropdown-select" id="mobile-select" onchange="location=this.value;">
    {{#each categories}}
    <option value="/products?category={{this.id}}" >{{this.name}}</option>
    {{/each}}
  </select>
</div>


  <div class="row">
    <div id="products-container"> 
      {{#each products}}
    <div class="plp-list">
    <h2>{{this.name}}</h2>

    <div class="product-description">
    
    <div aria-label="Product Image" class="mobile-product">
    <img src="{{this.imageURL}}" alt="{{this.name}}">
    </div>
    
    <div class="description mobile-product" aria-label="Product Description" >
    <p>{{this.description}}</p>
    </div>

    </div>
    <div class="price">
    <div class="showprice">
     MRP Rs. <span aria-label="Product Price">{{price}}</span> 
    </div> 
    <div class="showbtn" id="showbutton">
      <button aria-label="Add {{this.name}} to cart" class="btn-buy price-btn add-to-cart">Buy Now @ MRP Rs.{{this.price}}</a>
      <button aria-label="Add {{this.name}} to cart" class="price-btn-tablet add-to-cart">Buy Now @ MRP Rs.{{this.price}}</button>
      <button aria-label="Add {{this.name}} to cart" class="btn-buy buy-now add-to-cart">Buy Now</a>
    </div>
    </div>
    </div>
    {{/each}}
    </div>
</div>
</article>
</section>

<script>
  let dropdown=document.getElementById('mobile-select');
  let getpath=window.location.pathname+window.location.search;
  dropdown.value=getpath;
</script>

